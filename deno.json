{
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "dom.asynciterable",
            "deno.ns",
            "deno.unstable"
        ]
    },
    "lint": {
        "include": [
            "public",
            "scripts",
            "source"
        ]
    },
    "fmt": {
        "include": [
            "public",
            "scripts",
            "source"
        ],
        "options": {
            "useTabs": false,
            "lineWidth": 500,
            "indentWidth": 4,
            "singleQuote": true,
            "proseWrap": "preserve"
        }
    },
    "tasks": {
        "d": "deno run -A scripts/deploy.ts",
        "t": "deno test -A scripts/test.ts",
        "w": "deno run -A scripts/watch.ts",
        "watch-idea": "deno run -A scripts/watch-idea.ts",
        "watch-virtual": "deno run -A scripts/watch-virtual.ts"
    }
}