{
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "dom.asynciterable",
            "deno.ns",
            "deno.unstable"
        ]
    },
    "lint": {
        "include": [
            "scripts"
        ]
    },
    "fmt": {
        "include": [
            "scripts"
        ],
        "options": {
            "useTabs": false,
            "lineWidth": 500,
            "indentWidth": 4,
            "singleQuote": true,
            "proseWrap": "preserve"
        }
    },
    "tasks": {
        "d": "deno run -A scripts/deploy.ts",
        "t": "deno test -A scripts/test.ts",
        "w": "deno run -A scripts/watch.ts",
        "tv": "deno test scripts/virtual-test.ts",
        "wv": "deno run -A scripts/virtual-watch.ts"
    }
}